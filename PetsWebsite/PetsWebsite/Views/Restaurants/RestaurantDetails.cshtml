    <script>    
        var vm = new Vue({
            data: {
                restID: '',
                restFromID: [],

            },
            methods: {
                // initMap: function() {
                //     let map;
                //     map = new google.map.Map(document.getElementById('map'), {
                //         center: { lat: 24.9713701, lng: 121.5325067 },
                //         zoom: 17,
                //     });

                // }
            },
            mounted: function() {
                let that = this;
                var urlStr = window.location.href
                var index = urlStr.lastIndexOf('/')
                var str = urlStr.substring(index + 1, urlStr.length)
                that.restID = str;
                let url = `/api/RestaurantsApi/Details/rawdata/${that.restID}`
                axios.get(url)
                    .then(res => {
                        console.log(res)
                        that.restFromID = res.data;
                    })
                    .catch(err => {
                        console.error(err);
                    })
                // window.initMap = this.initMap;
            }
        });
        vm.$mount('#det');

    </script>

