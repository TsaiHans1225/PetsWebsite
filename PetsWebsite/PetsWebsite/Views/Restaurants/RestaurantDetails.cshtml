    @section Scripts{
    <script>
        var vm = new Vue({
            data: {
                restID: '',
                restFromID: []
            },
            methods: {

            },
            mounted: function() {
                let that = this;
                var urlStr = window.location.href
                var index = urlStr.lastIndexOf('/')
                var str = urlStr.substring(index + 1, urlStr.length)
                that.restID = str;

                let url = `/api/RestaurantsApi/Details/rawdata/${that.restID}`
                axios.get(url)
                    .then(res => {
                        console.log(res)
                        that.restFromID = res.data;
                    })
                    .catch(err => {
                        console.error(err);
                    })
            }
        });
        vm.$mount('#det');
    </script>
}